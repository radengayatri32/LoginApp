<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ActivityCode">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_2" />

    <ImageView
        android:id="@+id/rectangle_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="@integer/material_motion_duration_long_2"
        android:layout_marginTop="150dp"

        android:src="@drawable/rectangle_2" />



    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Telah Mengirim Token"
        android:textSize="25sp"

        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <EditText
        android:id="@+id/et_token"
        android:layout_width="331dp"
        android:layout_height="65dp"
        android:layout_below="@+id/telahMengirimkode"
        android:layout_centerInParent="true"
        android:background="@drawable/rectangle_3"
        android:hint="Token"
        android:inputType="numberSigned"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_below="@+id/et_token"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat email tidak benar?"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"/>



    <Button
        android:id="@+id/btn_lanjut2"
        android:layout_width="343dp"
        android:layout_height="84dp"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle_5"
        android:paddingBottom="7dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="20sp" />



    <TextView
        android:id="@+id/telahMengirimkode"
        android:layout_below="@+id/tv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telah mengirim token ke a********9@gmail.com. "

        android:textSize="15dp"
        android:layout_gravity="center_horizontal"/>

</RelativeLayout>